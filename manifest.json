{
    "manifest_version": 3,
    "name": "Orbit - The Calendar That Builds Itself",
    "version": "0.1.0",
    "description": "Capture dates from pages and build a smart calendar (demo).",
    "icons": {
      "48": "icons/icon48.png"
    },
    "permissions": [
      "storage",
      "notifications",
      "scripting",
      "activeTab"
    ],
    "host_permissions": [
      "http://localhost:8080/*",
      "https://*/"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon48.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "externally_connectable": {
      "matches": ["*://localhost/*"]
    }
  }